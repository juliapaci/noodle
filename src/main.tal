	#00 .brush/tool STZ

	.Screen/width DEI2 #0031 -- .Screen/height DEI2 #0010 -- #0020 #0008 SIZE-TO-RECT
		.filepane/y2 STZ2 .filepane/x2 STZ2 .filepane/y1 STZ2 .filepane/x1 STZ2

	( panel )
	#0008 DUP2 .panel/x STZ2 #0018 ++ .panel/x2 STZ2
	#0008 DUP2 .panel/y STZ2 #0088 ++ .panel/y2 STZ2

	;on-drag-panel .panel/drag-event STZ2
	;on-drag-resizer .resizer/drag-event STZ2
	;on-drag-viewport .viewport/drag-event STZ2

	#0030 #0030 ;set-viewport-position JSR2

	#22 #15 ;set-viewport-size JSR2
	#15 #11 ;set-surface-size JSR2

	;draw-panel JSR2

