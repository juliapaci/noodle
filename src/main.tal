@on-drag-surface-handle ( x* y* -> )

	#00 .viewport/h LDZ 2/ 8** .viewport/y LDZ2 ++ -- 4// NIP STH
	#00 .viewport/w LDZ 2/ 8** .viewport/x LDZ2 ++ -- 4// NIP STHr
		;set-surface-size JSR2

BRK

@on-touch-panel ( x* y* -> )

	.Mouse/state DEI ,&on-click JCN
		POP2 POP2 BRK
		&on-click
	.panel/y LDZ2 #0003 ++ -- #000a // NIP STH
	.panel/x LDZ2 -- #000a // NIP STHr
	( within x )
	OVR #02 < ,&valid JCN POP2 BRK &valid
	( within y )
	DUP #03 = ,&drag JCN
	DUP #08 = ,&drag JCN
	( release when not drag )
	RELEASE-MOUSE
	DUP #03 < ,&tool JCN
	DUP #03 > OVR #08 < AND ,&patt JCN
	DUP #07 > OVR #0d < AND ,&size JCN

BRK
	&tool 2* + ;select-tool JSR2 BRK
	&patt #04 - 2* + ;select-patt JSR2 BRK
	&size #09 - 2* + ;select-size JSR2 BRK
	&drag POP2 .panel ;start-drag JSR2 BRK

@get-tool ( -- ptr* )

	( set erase from right-click/mode )
	[ ;remove-pixel ;add-pixel ] .Mouse/state DEI #01 > .brush/mode LDZ + #01 JCN SWP2 POP2 .brush/oper STZ2
	( get function )
	#00 .Mouse/state DEI #00 > 2* .cursor/last LDZ #00 > + 2* .brush/tool LDZ 8* + ;tools ++ LDA2
	( record state )
	.Mouse/state DEI .cursor/last STZ

RTN

@on-touch-surface ( x* y* -> )

	,get-tool JSR STH2
	( canvas offset )
	.surface/y LDZ2 -- SWP2
	.surface/x LDZ2 -- SWP2
		STH2r JMP2

BRK

@on-touch-viewport ( x* y* -- )

	.zoom/active LDZ #00 = ,&cancel JCN
	,get-tool JSR STH2
	( canvas offset )
	.viewport/y LDZ2 -- 8// .zoom/y LDZ2 ++ SWP2
	.viewport/x LDZ2 -- 8// .zoom/x LDZ2 ++ SWP2
		STH2r JMP2

BRK
	&cancel POP2 POP2 BRK

@on-touch-viewport-handle ( x* y* -- )

	POP2 POP2
	.Mouse/state DEI #00 ! BRK?
	.viewport-handle ;start-drag JSR2

BRK

@on-touch-viewport-label ( x* y* -- )

	POP2 POP2
	.Mouse/state DEI #00 ! BRK?
	.viewport-label ;start-drag JSR2

BRK

@on-touch-surface-handle ( x* y* -- )

