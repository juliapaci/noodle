@on-drag-panel ( x* y* -> )

	;clear-panel JSR2
	;draw-viewport JSR2
	DUP2 .cursor/y1 LDZ2 -- STH2 .cursor/y1 STZ2
		.panel/y LDZ2 STH2r ++ STH2
	DUP2 .cursor/x1 LDZ2 -- STH2 .cursor/x1 STZ2
		.panel/x LDZ2 STH2r ++ STH2r
		;set-panel-position JSR2

BRK

