@set-viewport-size ( w h -- )
	
	( only redraw on change )
	DUP2 .viewport/size LDZ2 == ,&cancel JCN
	( limit size )
	DUP #01 < ,&cancel JCN
	OVR #01 < ,&cancel JCN
	DUP .Screen/height DEI2 8// NIP #04 - > ,&cancel JCN
	OVR .Screen/width DEI2 8// NIP #07 - > ,&cancel JCN

	;clear-viewport JSR2
	DUP .viewport/h STZ TOS 8** .viewport/y LDZ2 ++ .viewport/y2 STZ2
	DUP .viewport/w STZ TOS 8** .viewport/x LDZ2 ++ .viewport/x2 STZ2
	;center-surface JSR2

RTN
	&cancel POP2 RTN

